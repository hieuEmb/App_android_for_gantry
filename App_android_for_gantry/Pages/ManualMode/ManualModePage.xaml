<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_android_for_gantry.Pages.ManualMode.ManualModePage"
             Title="ManualModePage"
             >

    <ScrollView>
        <!-- RowDefinitions="*,*,*,*"(Xac dinh 4 hang trong grip, chia deu khon gian) -->
        <!-- ColumnDefinitions="*,*,*,*"(Xac dinh 4 cot trong grip, chia deu khon gian) -->
        <!--  Padding="10"( Khoang cach tu le Grip den noi dung ben trong) -->
        <!-- RowSpacing="10" (khoang cach giua cac hang) -->
        <!-- ColumnSpacing="10" (khoang cach giua cac cot) -->
        <Grid
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
            ColumnDefinitions="Auto,Auto,Auto"
            Padding="5"
            RowSpacing="5"
            ColumnSpacing="5">


            <!-- x:Name="Button1"(Ten button de truy xuat trong c#) -->
            <!-- Text="Start"(Noi dung hien thi) -->
            <!-- Clicked="OnButtonClicked"(Xu ly su kien nhan nut or goi ham sau c# khi nhan nut) -->
            <!-- Grid.Row="0" (Dat button vao cot thu 0 cua grip) -->
            <!-- Grid.Column="0" (Dat button vao hang thu 0 cua grip) -->
            <!-- HorizontalOptions="Fill" (Button gian ra theo chieu ngang cua o grip) -->
            <!-- VerticalOptions="Fill" (Button gian ra theo chieu doc cua o grip)-->


            <!-- Bang_tai_MAN-->
            <Button
                x:Name="Bang_Tai_Man"
                BackgroundColor="WhiteSmoke"
                BorderColor="Black" 
                BorderWidth="2" 
                Pressed="Bang_Tai_Man_System_Pressed"
                Released="Bang_Tai_Man_System_Released"
                Grid.Row="6"
                Grid.Column="2"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
            <Button.ImageSource>
                    <FileImageSource File="conveyor.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>

            <!-- Vacum_MAN-->
            <Button
                x:Name="Vacum_Man"
                BackgroundColor="WhiteSmoke"
                BorderColor="Black" 
                BorderWidth="2" 
                Pressed="Vacum_Man_System_Pressed"
                Released="Vacum_Man_System_Released"
                Grid.Row="6"
                Grid.Column="0"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
            <Button.ImageSource>
                <FileImageSource File="air.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>


            <!-- JOG_X_DOWN-->
            <Button 
               x:Name="Jog_X_Down"
               Text="↓"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_X_Down_System_Pressed"
               Released="Jog_X_Down_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="4"
               Grid.Column="1"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <!-- JOG_X_UP -->
            <Button 
               x:Name="Jog_X_Up"
               Text="↑"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_X_Up_System_Pressed"
               Released="Jog_X_Up_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="2"
               Grid.Column="1"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <!-- JOG_Y_RIGHT -->
            <Button 
               x:Name="Jog_Y_Right"
               Text="→"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_Y_Right_System_Pressed"
               Released="Jog_Y_Right_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="3"
               Grid.Column="2"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <!-- JOG_Y_LEFT -->
            <Button 
               x:Name="Jog_Y_Left"
               Text="←"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_Y_Left_System_Pressed"
               Released="Jog_Y_Left_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="3"
               Grid.Column="0"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <!-- JOG_Z__DOWN -->
            <Button 
               x:Name="Jog_Z__Down"
               Text="Z-"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_Z__Down_System_Pressed"
               Released="Jog_Z__Down_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="5"
               Grid.Column="2"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <!-- JOG_Z_UP -->
            <Button 
               x:Name="Jog_Z_Up"
               Text="Z+"
               FontSize="40"
               FontAttributes="Bold" 
               Pressed="Jog_Z_Up_System_Pressed"
               Released="Jog_Z_Up_System_Released"
               BackgroundColor="WhiteSmoke"
               TextColor="Black"
               BorderColor="Black" 
               BorderWidth="2" 
               Grid.Row="5"
               Grid.Column="0"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

            <Label 
                Text="POSX"
                FontAttributes="Bold" 
                FontSize="18"
                Grid.Row="1"
                Grid.Column="0"       
                HorizontalOptions="Center"
                VerticalOptions="Center"
                MinimumWidthRequest="100"
                MinimumHeightRequest="50"/>
            <Label 
                Text="{Binding RealPosX}" 
                FontSize="24" 
                TextColor="Blue"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                MinimumWidthRequest="100"
                MinimumHeightRequest="50"/>

            <Label 
              Text="POSY"
              FontAttributes="Bold" 
              FontSize="18"
              Grid.Row="1"
              Grid.Column="1"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              MinimumWidthRequest="100"
              MinimumHeightRequest="50"/>
            <Label 
              Text="{Binding RealPosY}" 
              FontSize="24" 
              TextColor="Blue"
              Grid.Row="0"
              Grid.Column="1"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              MinimumWidthRequest="100"
              MinimumHeightRequest="50"/>

            <Label 
              Text="POSZ"
              FontAttributes="Bold" 
              FontSize="18"
              Grid.Row="1"
              Grid.Column="2"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              MinimumWidthRequest="100"
              MinimumHeightRequest="50"/>

            <Label 
              Text="{Binding RealPosZ}" 
              FontSize="24" 
              TextColor="Blue"
              Grid.Row="0"
              Grid.Column="2"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              MinimumWidthRequest="100"
              MinimumHeightRequest="50"/>

        </Grid>
    </ScrollView>
</ContentPage>