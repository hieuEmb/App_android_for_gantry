<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_android_for_gantry.Pages.ImportMode.ImportModePage"
             Title="ImportModePage">
    <ScrollView>

        <Grid
         RowDefinitions="*"
         ColumnDefinitions="*,*"
         Padding="5">


            <!--  -->
            <Button 
             x:Name=" Write"    
             Text="Write"             
             BorderWidth="2"  
             BorderColor="Black" 
             Clicked="Write_System"
             Grid.Row="0"
             Grid.Column="0"
             Margin="0,0,0,0"
             WidthRequest="100"
             HeightRequest="70"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>

            <!--  -->
            <Entry 
             x:Name="entryValue" 
             Placeholder="Nhập giá trị"
             Keyboard="Numeric"
             Grid.Row="0"
             Grid.Column="1"
             Margin="0,0,0,0"
             WidthRequest="100"
             HeightRequest="70"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>

        </Grid>
    </ScrollView>
</ContentPage>