<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_android_for_gantry.MainPage"
             >
                

    <ScrollView>
        <!-- RowDefinitions="*,*,*,*"(Xac dinh 4 hang trong grip, chia deu khon gian) -->
        <!-- ColumnDefinitions="*,*,*,*"(Xac dinh 4 cot trong grip, chia deu khon gian) -->
        <!--  Padding="10"( Khoang cach tu le Grip den noi dung ben trong) -->
        <!-- RowSpacing="10" (khoang cach giua cac hang) -->
        <!-- ColumnSpacing="10" (khoang cach giua cac cot) -->
        <Grid
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
            ColumnDefinitions="Auto,Auto,Auto,Auto"
            Padding="5"
            RowSpacing="5"
            ColumnSpacing="5">


            <!-- x:Name="Button1"(Ten button de truy xuat trong c#) -->
            <!-- Text="Start"(Noi dung hien thi) -->
            <!-- Clicked="OnButtonClicked"(Xu ly su kien nhan nut or goi ham sau c# khi nhan nut) -->
            <!-- Grid.Row="0" (Dat button vao cot thu 0 cua grip) -->
            <!-- Grid.Column="0" (Dat button vao hang thu 0 cua grip) -->
            <!-- HorizontalOptions="Fill" (Button gian ra theo chieu ngang cua o grip) -->
            <!-- VerticalOptions="Fill" (Button gian ra theo chieu doc cua o grip)-->


            <BoxView
               x:Name="Connection"
               Color="LightGray"
               CornerRadius="10"
               Grid.Row="0"
               Grid.Column="0"
               WidthRequest="30"
               HeightRequest="30"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

            <Label 
              Text="CONNECTION"
              Grid.Row="1"
              Grid.Column="0"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>
              
            <!-- HOME -->
            <Button 
                x:Name="Start"                                                 
                BackgroundColor="WhiteSmoke"
                BorderColor="Black" 
                BorderWidth="2"  
                Clicked="Start_System"
                Grid.Row="2"
                Grid.Column="0"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Button.ImageSource>
                    <FileImageSource File="home.png" />
                    <!-- Sử dụng hình ảnh PNG -->
                </Button.ImageSource>
            </Button>


            <Label 
              Text="HOME"
              Grid.Row="3"
              Grid.Column="0"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>

            <!-- Stop -->
            <Button 
                x:Name="Stop"
                BorderColor="Black" 
                BorderWidth="2" 
                BackgroundColor="WhiteSmoke"
                Clicked="Stop_System"
                Grid.Row="2"
                Grid.Column="1"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            <Button.ImageSource>
                <FileImageSource File="stop.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>


            <Label 
              Text="STOP"
              Grid.Row="3"
              Grid.Column="1"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>
            

            <!--AUTO_MODE -->
            <Button
               x:Name="Auto_Mode"
               BackgroundColor="WhiteSmoke"
               BorderColor="Black" 
               BorderWidth="2" 
               Clicked="Auto_Mode_System"
               Grid.Row="4"
               Grid.Column="0"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Button.ImageSource>
                <FileImageSource File="auto.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>


            <Label 
              Text="AUTO"
              Grid.Row="5"
              Grid.Column="0"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>

            <!--MAN_MODE -->
            <Button
               x:Name="Man_Mode"
               BackgroundColor="WhiteSmoke"
               BorderColor="Black" 
               BorderWidth="2" 
               Clicked="Man_Mode_System"
               Grid.Row="4"
               Grid.Column="1"
               WidthRequest="100"
               HeightRequest="70"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Button.ImageSource>
                <FileImageSource File="manual.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>


            <Label 
              Text="MAN"
              Grid.Row="5"
              Grid.Column="1"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>
            
            <!--HOME_X -->
            <BoxView
               x:Name="Home_X"
               Color="LightGray"
               CornerRadius="10"
               Grid.Row="2"
               Grid.Column="3"
               WidthRequest="30"
               HeightRequest="30"
               VerticalOptions="Fill"
               HorizontalOptions="Fill"/>

            <Label 
               Text="HOME_X"
               Grid.Row="2"
               Grid.Column="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="Black"/>

            <!-- HOME_Y-->
           <BoxView
              x:Name="Home_Y"
              Color="LightGray"
              CornerRadius="10"
              Grid.Row="4"
              Grid.Column="3"
              WidthRequest="30"
              HeightRequest="30"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"/>

                <Label 
              Text="HOME_Y"
              Grid.Row="4"
              Grid.Column="2"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>

                <!-- HOME_Z-->
            <BoxView
              x:Name="Home_Z"
              Color="LightGray"
              CornerRadius="10"
              Grid.Row="6"
              Grid.Column="3"
              WidthRequest="30"
              HeightRequest="30"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"/>

            <Label 
              Text="HOME_Z"
              Grid.Row="6"
              Grid.Column="2"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              FontSize="16"
              FontAttributes="Bold"
              TextColor="Black"/>

            <!-- IMPORT_MODE-->
            <Button
                x:Name="Improt_Mode"
                BackgroundColor="WhiteSmoke"
                BorderColor="Black" 
                BorderWidth="2" 
                Clicked="Improt_Mode_System"
                Grid.Row="6"
                Grid.Column="0"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            <Button.ImageSource>
                <FileImageSource File="import.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>

            <Label 
             Text="IMPORT"
             Grid.Row="7"
             Grid.Column="0"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             FontSize="16"
             FontAttributes="Bold"
             TextColor="Black"/>

            <!-- EXPORT_MODE-->
            <Button
                x:Name="Export_Mode"
                BorderColor="Black" 
                BorderWidth="2" 
                BackgroundColor="WhiteSmoke"
                Clicked="Export_Mode_System"
                Grid.Row="6"
                Grid.Column="1"
                WidthRequest="100"
                HeightRequest="70"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            <Button.ImageSource>
                <FileImageSource File="export.png" />
                <!-- Sử dụng hình ảnh PNG -->
            </Button.ImageSource>
            </Button>


            <Label 
             Text="EXPORT"
             Grid.Row="7"
             Grid.Column="1"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             FontSize="16"
             FontAttributes="Bold"
             TextColor="Black"/>

            

        </Grid>
    </ScrollView>
    
</ContentPage>
